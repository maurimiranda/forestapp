<h1>Listing actividades</h1>

<table>
  <thead>
    <tr>
      <th>Movimiento</th>
      <th>Tipo actividad</th>
      <th>Superficie presentada</th>
      <th>Superficie certificada</th>
      <th>Superficie inspeccionada</th>
      <th>Superficie registrada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actividades.each do |actividad| %>
      <tr>
        <td><%= actividad.movimiento %></td>
        <td><%= actividad.tipo_actividad %></td>
        <td><%= actividad.superficie_presentada %></td>
        <td><%= actividad.superficie_certificada %></td>
        <td><%= actividad.superficie_inspeccionada %></td>
        <td><%= actividad.superficie_registrada %></td>
        <td><%= link_to 'Show', actividad %></td>
        <td><%= link_to 'Edit', edit_actividad_path(actividad) %></td>
        <td><%= link_to 'Destroy', actividad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Actividad', new_actividad_path %>
