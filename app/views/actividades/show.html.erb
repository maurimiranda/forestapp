<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Actividad</h3>
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Tipo de actividad:</dt>
          <dd><%= @actividad.tipo_actividad.descripcion %></dd>
          <dt>Presentado:</dt>
          <dd><%= @actividad.superficie_presentada %></dd>
          <dt>Certificado:</dt>
          <dd><%= @actividad.superficie_certificada %></dd>
          <dt>Inspeccionado:</dt>
          <dd><%= @actividad.superficie_inspeccionada %></dd>
          <dt>Registrado:</dt>
          <dd><%= @actividad.superficie_registrada %></dd>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h4>Plantaciones</h4>
    <table class="table table-hover table-grid" data-no-turbolink="true">
      <thead>
        <tr>
          <th>ID</th>
          <th>Titular</th>
          <th>Especie</th>
          <th>Tipo</th>
          <th>Presentado</th>
          <th>Certificado</th>
          <th>Inspeccionado</th>
          <th>Registrado</th>
          <th>Pol√≠gono</th>
          <th>Comentarios</th>
          <th class="icon"></th>
        </tr>
      </thead>
      <tbody>
        <% @actividades.each do |actividad| %>
          <tr>
            <td><%= actividad.plantacion.id %></td>
            <td><%= actividad.plantacion.titular.nombre if actividad.plantacion.titular %></td>
            <td><%= actividad.plantacion.especies.first.nombre_comun %></td>
            <td><%= actividad.plantacion.tipo_plantacion.descripcion %></td>
            <td><%= actividad.superficie_presentada %></td>
            <td><%= actividad.superficie_certificada %></td>
            <td><%= actividad.superficie_inspeccionada %></td>
            <td><%= actividad.superficie_registrada %></td>
            <td><%= actividad.plantacion.hectareas %></td>
            <td>
              <% if actividad.comentarios.length < 10 %>
                <%= actividad.comentarios %>
              <% else %>
                <abbr title="<%= actividad.comentarios %>"><%= "#{actividad.comentarios[0..9]}..." %></abbr>
              <% end %>
            </td>
            <td class="icon icon-lg">
            <td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>