<h1>Listing departamentos</h1>

<table>
  <thead>
    <tr>
      <th>Provincia</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.provincia_id %></td>
        <td><%= departamento.nombre %></td>
        <td><%= link_to 'Show', [@provincia, departamento] %></td>
        <td><%= link_to 'Edit', edit_provincia_departamento_path(@provincia, departamento) %></td>
        <td><%= link_to 'Destroy', [@provincia, departamento], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Departamento', new_provincia_departamento_path(@provincia) %>

<br>

<%= link_to 'Provincia', provincia_path(@provincia) %>