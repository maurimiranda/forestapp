<!DOCTYPE html>
<html>
<head>
  <title>ForestApp</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Ver navegador</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          <span class="glyphicon glyphicon-tree-conifer" aria-hidden="true"></span> ForestApp
        </a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "Expedientes", expedientes_path() %>
          </li>
          <li>
            <%= link_to "Titulares", titulares_path() %>
          </li>
          <li>
            <%= link_to "TÃ©cnicos", tecnicos_path() %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= yield :actions %>
          <% if @expediente and @expediente.numero_interno %>
            <li class="navbar-primary">
              <%= link_to @expediente.numero_interno, @expediente %>
            </li>
          <% end %>
        </ul>
      </div><!--/.navbar-collapse -->
    </div>
  </div>
  <div class="container-fluid">
    <%= render partial: "common/flash_messages", flash: flash %>
    <%= yield %>
  </div>
</body>
</html>
