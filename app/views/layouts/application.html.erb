<!DOCTYPE html>
<html>
<head>
  <title>
    ForestApp
    <% if @expediente and @expediente.numero_interno %>
      <%= "(#{@expediente.numero_interno})" %>
    <% else %>
      <%= " - #{controller.controller_name.camelize}" %>
    <% end %>
  </title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag params[:controller] %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Ver navegador</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          <i class="glyphicon glyphicon-tree-deciduous"></i>
        </a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to expedientes_path do %>
              Expedientes <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <% end %>
          </li>
          <% if current_user.editor? %>
            <li>
              <%= link_to titulares_path do %>
                Titulares <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <% end %>
            </li>
            <li>
              <%= link_to tecnicos_path do %>
                Técnicos <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <% end %>
            </li>
            <li>
              <%= link_to plantaciones_path do %>
                Plantaciones <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= yield :actions %>
          <% if @expediente and @expediente.numero_interno %>
            <li class="navbar-primary">
              <%= link_to @expediente.numero_interno, @expediente, id: "nav_expediente" %>
            </li>
          <% end %>
          <li class="navbar-danger">
            <%= link_to logout_path, id: 'nav-logout', data: { confirm: '¿Está seguro que desea cerrar la sesión?' } do %>
              <span class="glyphicon glyphicon glyphicon-log-out" aria-hidden="true"></span> Salir
            <% end %>
          </li>
        </ul>
      </div><!--/.navbar-collapse -->
    </div>
  </div>
  <div class="container-fluid">
    <%= render partial: "common/flash_messages", flash: flash %>
    <%= yield %>
  </div>
</body>
</html>
