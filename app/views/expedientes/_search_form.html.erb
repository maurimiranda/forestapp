<%= bootstrap_form_for expediente, url: expedientes_path, method: "get", layout: :horizontal, label_col: "col-sm-5", control_col: "col-sm-7" do |f| %>
  <%= f.text_field :numero_interno, label: "Número interno" %>
  <%= f.text_field :numero_expediente, label: "Número expediente" %>
  <%= render partial: 'boolean_field', locals: {form: f, field: :incompleto, label: "Incompleto"} %>
  <%= render partial: 'boolean_field', locals: {form: f, field: :plurianual, label: "Plurianual"} %>
  <%= render partial: 'boolean_field', locals: {form: f, field: :agrupado, label: "Agrupado"} %>
  <%= render partial: 'boolean_field', locals: {form: f, field: :activo, label: "Activo"} %>
  <hr/>
  <%= f.submit "Buscar", class: "btn btn-primary pull-right" %>
<% end %>