<% content_for :head do %>
  <%= javascript_include_tag 'expedientes' %>
<% end %>

<% content_for :actions do %>
  <% if current_user.editor? %>
    <li>
      <%= link_to new_expediente_path, id: 'nav_new_expediente' do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo Expediente
      <% end %>
    </li>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Buscador</h3>
      </div>
      <div class="panel-body">
        <%= render partial: 'search_form', locals: {expediente: @expediente_filter} %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <%= render partial: 'expedientes', locals: {expedientes: @expedientes} %>
  </div>
</div>