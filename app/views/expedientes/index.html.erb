<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Buscador</h3>
      </div>
      <div class="panel-body">
        <form role="form">
          <div class="form-group">
            <label for="numeroInterno">Número interno</label>
            <input type="text" class="form-control" id="numeroInterno" placeholder="XX-XX-XXX/XX-XX">
          </div>
          <button type="submit" class="btn btn-default pull-right">Buscar</button>
        </form>
      </div>
    </div>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Estadísticas</h3>
      </div>
      <ul class="list-group">
        <li class="list-group-item">
          <h4><span class="label label-info pull-right"><%= Expediente.count %></span></h4>
          Cantidad de expedientes
        </li>
        <li class="list-group-item">
          <h4><span class="label label-info pull-right"><%= Movimiento.count %></span></h4>
          Cantidad de movimientos
        </li>
        <li class="list-group-item">
          <h4><span class="label label-info pull-right"><%= Actividad.count %></span></h4>
          Cantidad de actividades
        </li>
      </ul>      
    </div>
  </div>
  <div class="col-md-9">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Número interno</th>
          <th>Número expediente</th>
          <th>Titular</th>
          <th>Técnico</th>
          <th class="icon">Plurianual</th>
          <th class="icon">Agregado</th>
          <th class="icon">Activo</th>
          <th class="icon"></th>
        </tr>
      </thead>
      <tbody>
        <% @expedientes.each do |expediente| %>
          <tr>
            <td><%= expediente.numero_interno %></td>
            <td><%= expediente.numero_expediente %></td>
            <td><%= expediente.titular %></td>
            <td><%= expediente.tecnico %></td>
            <td class="icon">
              <% if expediente.plurianual %>
                <span class="glyphicon glyphicon-ok"></span>
              <% end %>
            </td>
            <td class="icon">
              <% if expediente.agregado %>
                <span class="glyphicon glyphicon-ok"></span>
              <% end %>
            </td>
            <td class="icon">
              <% if expediente.activo %>
                <span class="glyphicon glyphicon-ok"></span>
              <% end %>
            </td>
            <td class="icon icon-lg">
              <%= link_to expediente_path(expediente) do %>
                <span class="glyphicon glyphicon-share"></span>
              <% end %>
              <%= link_to edit_expediente_path(expediente) do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>